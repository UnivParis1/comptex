{
  "name": "comptex",
  "private": true,
  "version": "0.0.0",
  "description": "Application to create users external users with modular moderation workflow",
  "repository": "https://github.com/UnivParis1/comptex",
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "postinstall": "cd app && npm install",
    "prestart": "npm install",
    "build": "concurrently npm:client-build",
    "build:w": "concurrently npm:client-build:w",
    "dev": "concurrently npm:client-dev",
    "start": "concurrently npm:client-build npm:server-start",
    "start:w": "concurrently npm:client-build:w npm:server-start:dev",
    "test": "concurrently npm:server-typecheck npm:server-test npm:client-typecheck npm:client-test",
    "client-build": "cd app && npm run build:atomic",
    "client-build:w": "cd app && npm run build -- --watch",
    "client-dev": "cd app && npm run dev",
    "client-test": "cd app && npm run test:unit",
    "client-test:w": "cd app && npm run test:unit -- --watch",
    "client-typecheck": "cd app && npm run typecheck",
    "client-typecheck:w": "cd app && npm run typecheck -- --watch",
    "server-typecheck": "tsc -p server",
    "server-typecheck:w": "tsc -p server --watch",
    "server-start": "node start-server.js",
    "server-start:dev": "NODE_ENV=test node --watch start-server.js",
    "server-test": "mocha server/tests/{,*/}*.test.ts",
    "server-test:w": "npm run server-test -- --watch"
  },
  "engines": {
    "node": ">= 22.x"
  },
  "dependencies": {
    "@types/accept-language-parser": "^1.5.1",
    "@types/bytes": "^3.1.1",
    "@types/cookie-parser": "^1.4.1",
    "@types/cookie-session": "^2.0.36",
    "@types/express": "^5.0.5",
    "@types/express-session": "^1.17.3",
    "@types/lodash-es": "^4.14.x",
    "@types/mocha": "^10.0.0",
    "@types/morgan": "^1.7.32",
    "@types/nodemailer": "^7.0.4",
    "@types/session-file-store": "^1.2.0",
    "accept-language-parser": "^1.5.0",
    "basic-auth": "^2.0.1",
    "connect-cas": "github:UnivParis1/connect-cas#3.0.0",
    "cookie-parser": "^1.4.4",
    "cookie-session": "^2.1.1",
    "csvtojson": "^2.0.10",
    "debug": "^4.3.4",
    "es6-promise": "^4.1.1",
    "express": "^5.1.0",
    "express-session": "^1.15.6",
    "iconv-lite": "^0.7.2",
    "ldap-filter": "^0.3.3",
    "ldapjs-promise-disconnectwhenidle": "github:UnivParis1/node-ldapjs-promise-disconnectWhenIdle",
    "lodash-es": "^4.14.x",
    "mongodb": "^6.21.0",
    "morgan": "^1.5.3",
    "nodemailer": "^7.0.10",
    "nodemailer-sendmail-transport": "^1.0.0",
    "session-file-store": "^1.2.0",
    "typescript": "^5.6.2"
  },
  "devDependencies": {
    "@types/basic-auth": "^1.1.3",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-plugin-vue": "^10.5.1",
    "mocha": "^11.7.5",
    "source-map-support": "^0.5.21",
    "vue-eslint-parser": "^10.2.0"
  }
}
