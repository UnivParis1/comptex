{
    "include": [
        "**/*.ts",
        "../shared/**/*.ts"
    ],
  "compilerOptions": {
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,     
    "alwaysStrict": true,
    "strictFunctionTypes": true,
    "types" : [
        "body-parser", "express", "lodash", "mocha", "mongodb", "morgan", "mustache", "node", "nodemailer", "xml2js"
    ],
    "target": "es2018",
    "module": "commonjs"
  }
}
